<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:text="Reminder (minutes before)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spinnerReminder" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:text="Due in days (optional)" android:layout_marginTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/editDueDays" android:hint="0 = use purchase date" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
